{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "types": ["./src/types"],
      "src/types": ["./src/types"]
    }
  },
  "target": "es2017",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "lib": ["es2017"]
}
